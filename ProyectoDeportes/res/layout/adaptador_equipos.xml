<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/escudo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentRight="false"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="0dp" />

    <TextView
        android:id="@+id/equipo"
        android:layout_width="fill_parent"
        android:layout_height="20dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/escudo" 
        android:textSize="15dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/labelAnio"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/equipo"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/escudo"
        android:text="@string/AnioFundacion" 
        android:textSize="12dp"/>
    
        <TextView
        android:id="@+id/labelEstadio"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="35dp"
        android:layout_toRightOf="@+id/escudo"
        android:text="@string/estadio" 
        android:textSize="12dp"/>

        <TextView
        android:id="@+id/anioFundacion"
        android:layout_width="fill_parent"
        android:layout_height="20dp"
        android:layout_alignTop="@+id/labelAnio"
        android:layout_marginLeft="0dp"
        android:layout_toRightOf="@+id/labelAnio"
        android:textSize="12dp"
        android:textStyle="italic" />

        <TextView
        android:id="@+id/estadio"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/labelEstadio"
        android:layout_toRightOf="@+id/labelEstadio"
        android:layout_marginLeft="0dp"
        android:textSize="12dp"
        android:textStyle="italic" />

</RelativeLayout>
